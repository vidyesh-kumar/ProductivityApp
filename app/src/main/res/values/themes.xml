<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/back</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDatePicker" >
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/heading_gray</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/heading_gray</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter_semi</item>
        <!-- Used for the background -->
        <item name="android:background">@color/back</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:background">@color/back</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/inter_semi</item>
        <item name="android:background">@color/back</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/heading_gray</item>
    </style>

    <style name="MySpinnerTimePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:timePickerStyle">@style/MySpinnerTimePicker</item>
        <item name="android:background">@color/back</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="MySpinnerTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>